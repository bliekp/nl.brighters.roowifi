{
    "id": "nl.brighters.roowifi",
    "name": {
        "en": "RooWiFi"
    },
    "version": "0.0.1",
    "compatibility": "0.x",
    "author": {
        "name": "Pim Bliek",
        "email": "pim@pimbliek.nl"
    },
    "description": {
	"en": "This App enables you to use your RooWifi module on your Roomba vacuumcleaner. You can let it clean, dock and see it's charging status.",
	"nl": "Met deze App kun je je Roowifi module op je Roomba stofzuiger aansturen. Je kunt de Roomba laten schoonmaken, docken en de oplaadstatus zien."
    },
    "permissions": [
	"homey:manager:speech-output"
    ],

    "drivers": [
        {
            "id": "roowifi",
            "name": {
                "en": "RooWifi Driver",
                "nl": "RooWifi Driver"
		},
            "images": {
                "large": "assets/drivers/roowifi/large.jpg",
                "small": "assets/drivers/roowifi/small.jpg"
            },
            "class": "other",
	    "capabilities": [ "" ],
	    "pair": [
		{
			                    "id": "start"
                },
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_cleaner"
                    }
                },
                {
                    "id": "add_cleaner",
                    "template": "add_devices"
                }
            ]
        }
    ],
	"flow": {
        "actions": [
        {
            "id": "start",
            "title": {
                "en": "Start cleaning",
                "nl": "Stofzuigen starten"
            },
            "args": [
	              {
	                "name": "device",
	                "type": "device",
	                "placeholder": {
	                  "en": "Select vacuum cleaner",
	                  "nl": "Selecteer stofzuiger"
	                },
	                "filter": "driver_id=vacuum"
	              }
	        ]
        },
	       {
            "id": "Spot",
            "title": {
                "en": "Spot cleaning",
                "nl": "Spot schoonmaken"
            },
            "args": [
	              {
	                "name": "device",
	                "type": "device",
	                "placeholder": {
	                  "en": "Select vacuum cleaner",
	                  "nl": "Selecteer stofzuiger"
	                },
	                "filter": "driver_id=vacuum"
	              }
	        ]
        },
        {
            "id": "gohome",
            "title": {
                "en": "Return to dock",
                "nl": "Terug naar laadstation"
            },
            "args": [
	              {
	                "name": "device",
	                "type": "device",
	                "placeholder": {
	                  "en": "Select vacuum cleaner",
	                  "nl": "Selecteer stofzuiger"
	                },
	                "filter": "driver_id=vacuum"
	              }
	        ]
        }
	   ]
  }
}
